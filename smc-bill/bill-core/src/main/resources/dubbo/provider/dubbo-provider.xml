 	<bean id="dubboConfig"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="order" value="1" />
		<property name="ignoreUnresolvablePlaceholders" value="true" />
		<property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE" />
	</bean>
 
	<dubbo:application name="${dubbo.appname}" />
	<dubbo:registry protocol="${dubbo.registry.protocol}"
		address="${center.dubbo.registry.address}" file="${dubbo.registry.file.server}" />

	<dubbo:protocol name="${dst.dubbo.protocol}" port="${dst.dubbo.protocol.port}" />
	
	<dubbo:protocol name="${dst.rest.protocol}" port="${dst.rest.protocol.port}"
		server="${dubbo.protocol.service}" contextpath="${dubbo.protocol.contextpath}"
		threads="500" accepts="500" />
	
	<dubbo:monitor protocol="false" />

	<dubbo:annotation package="com.x.smc.bill.api" />

	<import resource="../../context/core-context.xml" />
</beans>